<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/verde"
    android:keepScreenOn="true"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_ _ _ _"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/marrom"
        android:id="@+id/txtPalavraJogo"

       android:layout_marginTop="10dp"
        android:background="@color/branco"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textAlignment="center"
        android:textColor="@color/marrom"
        android:background="@color/preto"
        android:id="@+id/txtCategoria"
        android:textSize="18sp"
        android:layout_marginTop="10dp"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erros: 0"
            android:textColor="@color/marrom"
            android:background="@color/preto"
            android:textSize="16sp"
            android:textAlignment="center"
            android:id="@+id/txtErros"
            android:layout_marginRight="200dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acertos: 0"
            android:textColor="@color/marrom"
            android:id="@+id/txtAcertos"
            android:background="@color/preto"
            android:textSize="16sp"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnA"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/preto"
            android:onClick="acao"
            android:tag="A"
            android:text="A"
            android:textColor="@color/marrom" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ativado"
            android:onClick="acao"
            android:tag="B"
            android:text="B"
            android:textColor="@color/marrom"/>

        <Button
            android:id="@+id/btnC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ativado"
            android:onClick="acao"
            android:tag="C"
            android:text="C"
            android:textColor="@color/marrom"/>

        <Button
            android:id="@+id/btnD"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ativado"
            android:onClick="acao"
            android:tag="D"
            android:text="D"
            android:textColor="@color/marrom" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ativado"
            android:onClick="acao"
            android:tag="E"
            android:text="E"
            android:textColor="@color/marrom" />

        <Button
            android:id="@+id/btnF"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ativado"
            android:onClick="acao"
            android:tag="F"
            android:text="F"
            android:textColor="@color/marrom" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        >



        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="G"
            android:id="@+id/btnG"
            android:onClick="acao"
            android:tag="G"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="H"
            android:id="@+id/btnH"
            android:onClick="acao"
            android:tag="H"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
