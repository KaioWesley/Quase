            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Q"
            android:id="@+id/btnQ"
            android:onClick="acao"
            android:tag="Q"
            android:layout_marginRight="5dp"
