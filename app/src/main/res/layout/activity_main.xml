            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="I"
            android:id="@+id/btnI"
            android:onClick="acao"
            android:tag="I"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
