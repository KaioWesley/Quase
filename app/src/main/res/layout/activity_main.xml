            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="O"
            android:id="@+id/btnO"
            android:onClick="acao"
            android:tag="O"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
            android:textColor="@color/marrom"
            />

        <Button
