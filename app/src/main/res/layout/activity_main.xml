            android:id="@+id/btnV"
            android:onClick="acao"
            android:tag="V"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="W"
            android:id="@+id/btnW"
            android:onClick="acao"
            android:tag="W"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
