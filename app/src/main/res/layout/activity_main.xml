            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="K"
            android:id="@+id/btnK"
            android:onClick="acao"
            android:tag="K"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/ativado"
            android:textColor="@color/marrom"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="L"
            android:id="@+id/btnL"
            android:onClick="acao"
            android:tag="L"
            android:layout_marginRight="5dp"
